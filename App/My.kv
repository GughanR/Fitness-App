<WorkoutPlanCard>:  # Card element
    size_hint_y: None
    height: root.size[0]*0.3
    MDCardSwipeLayerBox:
        padding: "16dp"
        md_bg_color: "#ff4d36"
        radius: "14dp"
        MDIconButton:
            icon: "trash-can-outline"
            pos_hint: {"center_y": .5}
            icon_size: "50dp"
            theme_icon_color: "Custom"
            icon_color:1,1,1,1
            on_release: root.parent.parent.parent.remove_card(root)

    MDCardSwipeFrontBox:
        line_color: 0,0,0,1
        line_width: 1.1
        adaptive_height: True
        MDBoxLayout:
            padding: 10,5
            FitImage:
                source: root.image_source
                size_hint:[0.3,1]
            MDFlatButton:
                size_hint:[0.7,1]
                text: root.text
                font_size: app.fs_normal
                halign:"center"
                _no_ripple_effect: True
                on_release: root.parent.parent.parent.select_card(root)

